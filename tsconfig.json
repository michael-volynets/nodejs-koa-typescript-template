{
  "compilerOptions": {
      "module": "commonjs",
      "target": "es6",
      "esModuleInterop": true,
      "noImplicitAny": true,
      "noUnusedLocals": true,
      "alwaysStrict": true,
      "strict": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": "./src",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "paths": {  
          "*": [
              "./../node_modules/*",
              ".types/*"
          ]
      }
  },
  "include": [
      "src/**/*.ts"
  ]
}